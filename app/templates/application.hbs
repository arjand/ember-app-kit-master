<div class="container">
<section id="todoapp">
	<header id="header">
		<h1>todos</h1>
		<input type="text" id="new-todo" placeholder="What needs to be done?" class="form-control"/>
	</header>

	


{{outlet}}


	<footer id="footer">
		<span id="todo-count">
			<strong>2</strong> todos left
		</span>
		<ul id="filters">
			<li>
				<a href="all" class="selected">All</a>
			</li>
			<li>
				<a href="active">Active</a>
			</li>
			<li>
				<a href="completed">Completed</a>
			</li>
		</ul>

		<button id="clear-completed" class="btn">
			Clear completed (1)
		</button>
	</footer>
</section>

<footer id="info">
	<p>Double-click to edit a todo</p>
</footer>

</div>




